echo $cputemp $mem
["$1" == ""] && exit
case $1 in
	1) exec "st" -i -g float -e "btop";;
	2) notify-send "ðŸ–¥ CPU module " "\- Shows CPU temperature.
- Ctrl + Right click to show intensive processes.
- Click to open btop." ;;
	3) "st" -e "nvim" "$0";;
	6) notify-send "ðŸ–¥ CPU hogs" "$(ps axch -o cmd:15,%cpu --sort=-%cpu | head)\\n(100% per core)" ;;
esac

