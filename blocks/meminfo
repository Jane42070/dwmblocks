#!/bin/bash
mem=`grep Active: /proc/meminfo | awk '{printf("%.1f",$2/1024/1024)}'`
if [[ $mem < 6 ]]; then
	echo ðŸ˜†${mem}G
elif [[ $mem < 9 ]]; then
	echo ðŸ˜„${mem}G
elif [[ $mem < 12 ]]; then
	echo ðŸ˜¬${mem}G
elif [[ $mem < 15 ]]; then
	echo ðŸ˜ ${mem}G
else
	echo ðŸ˜¡${mem}G
	notify-send "High memory usage"
fi
["$1" == ""] && exit
case $1 in
	1) exec "st" -i -g float -e "btop";;
	2) ;;
	3) "st" -e "nvim" "$0";;
esac

